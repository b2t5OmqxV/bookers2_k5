<div class='body'>
  <div class='container'>

    <!-- エラーメッセージ表示-->
    <%= render "template/error_messages" ,obj:@book %>
    <!-- エラーメッセージ表示-->

    <div class='row'>
	    <div class='col-xs-3'>

	      <h2>User info</h2>
	      <%= render 'users/profile', user: current_user %>
		    <!--メモ　右側の指定に注意。そこを間違えるとエラーが発生して表示されない -->
		    <div class='row'>
          <% if current_user.followed_by?(current_user) %>
            <%= link_to 'フォローを外す',user_relationships_path(user_id:current_user.id), method: :delete, class: "btn btn-primary col-xs-6" %>
          <% else %>
            <%= link_to 'フォローする',user_relationships_path(user_id:current_user.id),method: :post, class: "btn btn-success col-xs-6" %>
          <% end %>
        </div>

	      <h2>New book</h2>
	      <%= render 'newform', book: @book %>

	    </div>

	    <div class='col-xs-9'>

		    <h2>Books index</h2>
		    <!--books一覧 -->
		    <table class="table table-hover table-inverse">
			    <thead>
				  <tr>
					  <th></th>
					  <th>Title</th>
					  <th>Opinion</th>
					  <th colspan="3"></th>
				  </tr>
			    </thead>

			    <tbody>
				  <% @books.each do |book| %>
				  <tr>
					  <td>
						  <%= link_to(book.user) do %>
						  <%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size:"50x50") %>
						  <% end %>
					  </td>
					  <td>
					  	<%= link_to book.title, book, class: "book_#{book.id}" %>
					  </td>
					  <td>
					  	<%= book.body %>
					  </td>
					  <td>
					  	<% if book.favorited_by?(current_user) %>
					  	<!-- favoriteを消す！！ -->
					  	  <%= link_to book_favorites_path(book_id: book.id),method: :delete do %>
					  	  <i class="fa fa-heart" aria-hidden="true" style="color: black;"></i>
					  	  <%= book.favorites.count %>
					  	  <% end %>
					  	<% else %>
					  	<!-- favoriteを増やす！！ -->
					  	  <%= link_to book_favorites_path(book_id: book.id),method: :post do %>
					  	  <i class="fa fa-heart-o" aria-hidden="true" style="color: black;"></i>
					  	  <%= book.favorites.count %>
					  	  <% end %>
					  	<% end %>
					  </td>
					  <td>
					  	<p>コメント数：<%= book.book_comments.count %><p>
					  </td>
				  </tr>
				  <% end %>
			    </tbody>
		    </table>


		  <!--books一覧 -->
      </div>

	  </div>
  </div>
</div>

<footer>
<%= render "template/footer" %>
</footer>